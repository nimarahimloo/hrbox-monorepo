root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{js,ts,jsx,tsx}]
quote_type = single
indent_size = 2

[*.json]
indent_size = 2
quote_type = double

# برای Markdown و YAML
[*.{md,yml,yaml}]
trim_trailing_whitespace = false
insert_final_newline = true

# برای Shell Scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
